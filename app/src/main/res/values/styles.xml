<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/gray</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="AppThemeNoTitleBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:screenOrientation">sensorPortrait</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/dimen_10dp</item>
        <item name="android:paddingTop">@dimen/dimen_10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:background">@drawable/tron</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="CustomDialog" parent="android:Theme.Dialog">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="CustomDialogError" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@color/gray_light</item>
        <item name="android:colorAccent">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Titles">
        <item name="android:textColor">@color/text_titles_blue</item>
        <item name="android:textSize">@dimen/text_error_size_title</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ErrorMessage">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_error_size_msg</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Titles.Black">
        <item name="android:textColor">@color/text_titles_light</item>
        <item name="android:textSize">@dimen/text_title_black_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Titles.Blue">
        <item name="android:textColor">@color/text_titles_blue</item>
        <item name="android:textSize">@dimen/text_title_blue_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
    </style>

    <style name="Subtitles">
        <item name="android:textColor">@color/text_titles_light</item>
        <item name="android:textSize">@dimen/text_title_blue_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">@dimen/dimen_10dp</item>
    </style>

    <style name="ButtonStyle.Red">
        <item name="android:layout_marginTop">@dimen/dimen_14dp</item>
        <item name="android:background">@drawable/tron</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_20dp</item>
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="android:layout_height">@dimen/dimen_25dp</item>
    </style>

    <style name="ButtonStyle.Blue">
        <item name="android:layout_marginTop">@dimen/dimen_14dp</item>
        <item name="android:background">@drawable/tron</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingStart">@dimen/dimen_20dp</item>
        <item name="android:paddingEnd">@dimen/dimen_20dp</item>
        <item name="android:textSize">@dimen/dimen_14dp</item>
        <item name="android:layout_height">@dimen/dimen_25dp</item>
    </style>

    <style name="CardDataStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="layout_constraintWidth_percent">0.9</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:padding">8dp</item>
        <item name="cardBackgroundColor">@color/gray</item>
    </style>

    <style name="RowModifyDataStyle">
        <item name="android:background">@drawable/tron</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColorHint">@color/gray_dark</item>
    </style>

    <style name="RowModifyDataStyleWithoutBackground">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:padding">2dp</item>
        <item name="android:textColorHint">@color/gray_dark</item>
    </style>

    <style name="LabelModifyDataStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="EditModifyDataStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@color/transparent</item>
        <item name="android:layout_marginStart">4dp</item>
        <item name="android:layout_marginEnd">4dp</item>
    </style>

    <style name="EditModifyDataStyleWithBackground">
        <item name="android:background">@drawable/tron</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="TitleModifyDataStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
